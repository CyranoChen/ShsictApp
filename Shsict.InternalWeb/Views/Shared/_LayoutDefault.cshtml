<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.mobile-1.3.2.min.js"></script>
    <link href="~/Scripts/Jquery.mobile/jquery.mobile-1.3.2.min.css" rel="stylesheet" />
    <link href="~/Content/themes/Screen.css" rel="stylesheet" />
 @*    @Styles.Render("~/Content/mobileCss", "~/Content/css")
     @Scripts.Render("~/bundles/modernizr")*@
</head>

<body>
    <div data-role="page">
        <div id="header" data-theme="b" data-position="fixed" class="header" data-role="header">
            <h3>@ViewBag.Title</h3>
            @RenderSection("Header")
        </div>
        <div data-role="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
